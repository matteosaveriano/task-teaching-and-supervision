    <!-- New adapter -->
     <joint name="box_adapter_joint" type="fixed">
      <origin xyz="0.0 0.0 0.005" rpy="0.0 0.0 0.0"/>
      <parent link="${name}_link_7"/>
      <child link="box_adapter_link"/>
    </joint> 
	
    <link name="box_adapter_link">
	  <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
		<geometry>
		  <box size="0.07 0.07 0.016"/>
		</geometry>
		<material name="white">
		  <color rgba="1 1 1 1"/>
		</material>
	  </visual>
	  <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
		<geometry>
		  <box size="0.07 0.07 0.016"/>
		</geometry>
	  </collision>
	</link>

    <!-- wsg50 gripper -->
    <wsg50_gripper parent="box_adapter">
