<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" 
       xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface" 
       name="lwr">

  <xacro:include filename="$(find lwr_rviz_visualization)/defs/util_defs.xml"/>

  <!-- wsg50 Gripper -->
  <xacro:include filename="$(find lwr_rviz_visualization)/defs/wsg50_gripper/wsg50_gripper_defs.urdf"/>

  <xacro:property name="arm_elem_base_mass" value="2.0"/>
  <xacro:property name="arm_elem_link_mass" value="2.0"/>
  <xacro:property name="arm_elem_end_link_mass" value="2.0"/>
  <xacro:property name="arm_elem_ball_link_mass" value="2.0"/>

  <xacro:property name="arm_velocity_scale_factor" value="1"/>

  <!-- right is either 1 (for right arm) or -1 (for left arm) -->
  <xacro:macro name="kuka_lwr_arm" params="parent name right *origin">

    <!-- First (shoulder) element of the arm. Fixed to its parent. -->
    <joint name="${parent}_${name}_arm_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}_link"/>
      <child link="calib_${name}_base_link"/>
    </joint>

    <link name="calib_${name}_base_link">
      <inertial>
        <mass value="${arm_elem_base_mass}"/>
        <origin xyz="0 0 0.055"/>
        <cylinder_inertia_def radius="0.06" length="0.11"
                              mass="${arm_elem_base_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_base.dae"/>
        </geometry>
        <material name="White"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_base_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="calib_${name}_base_link">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <!-- Second segment of the arm. Joint along z-axis -->
    <joint name="${name}_arm_0_joint" type="revolute">
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * M_PI / 180}" upper="${170 * M_PI / 180}"
             effort="204" velocity="${arm_velocity_scale_factor * 110 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-160 * M_PI / 180}"
                         soft_upper_limit="${160 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="calib_${name}_base_link"/>
      <child link="${name}_link_1"/>
    </joint>

    <link name="${name}_link_1">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 -0.06 0.130"/>
        <cuboid_inertia_def length="0.12" width="0.06" height="0.260"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_segment_a.dae"/>
        </geometry>
        <material name="White"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_segment_a_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_1">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_0_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_0_motor"/>
      <joint name="${name}_arm_0_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <!-- Third segment of the arm. Joint along y-axis -->
    <joint name="${name}_arm_1_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-120 * M_PI / 180}" upper="${120 * M_PI / 180}"
             effort="306" velocity="${arm_velocity_scale_factor * 110 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-110 * M_PI / 180}"
                         soft_upper_limit="${110 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="${name}_link_1"/>
      <child link="${name}_link_2"/>
    </joint>

    <link name="${name}_link_2">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0.06 ${0.130 - 0.06}"/>
        <cuboid_inertia_def length="0.12" width="0.06" height="0.260"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.2" rpy="${M_PI} 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_segment_b.dae"/>
        </geometry>
        <material name="White"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.2" rpy="${M_PI} 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_segment_b_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_2">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_1_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_1_motor"/>
      <joint name="${name}_arm_1_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <!-- Fourth element of the arm. z-axis -->
    <joint name="${name}_arm_2_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * M_PI / 180}" upper="${170 * M_PI / 180}"
             effort="204" velocity="${arm_velocity_scale_factor * 130 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-160 * M_PI / 180}"
                         soft_upper_limit="${160 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="${name}_link_2"/>
      <child link="${name}_link_3"/>
    </joint>

    <link name="${name}_link_3">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0.06 0.130"/>
        <cuboid_inertia_def length="0.12" width="0.06" height="0.260"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_segment_a.dae"/>
        </geometry>
        <material name="White"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_segment_a_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_3">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_2_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_2_motor"/>
      <joint name="${name}_arm_2_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <!-- fifth element of the arm. x-axis -->
    <joint name="${name}_arm_3_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${-120 * M_PI / 180}" upper="${120 * M_PI / 180}"
             effort="306" velocity="${arm_velocity_scale_factor * 130 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-110 * M_PI / 180}"
                         soft_upper_limit="${110 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="${name}_link_3"/>
      <child link="${name}_link_4"/>
    </joint>

    <link name="${name}_link_4">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 -0.06 ${0.130 - 0.06}"/>
        <cuboid_inertia_def length="0.12" width="0.06" height="0.2600"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0.2" rpy="0 ${M_PI} 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_segment_b.dae"/>
        </geometry>
        <material name="White"/>
      </visual>

      <collision>
        <origin xyz="0 0 0.2" rpy="0 ${M_PI} 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_segment_b_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_4">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_3_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_3_motor"/>
      <joint name="${name}_arm_3_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <!-- Sixth element of the arm. z-axis -->
    <joint name="${name}_arm_4_joint" type="revolute">
      <origin xyz="0 0 0.20" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * M_PI / 180}" upper="${170 * M_PI / 180}"
             effort="204" velocity="${arm_velocity_scale_factor * 130 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-160 * M_PI / 180}"
                         soft_upper_limit="${160 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="${name}_link_4"/>
      <child link="${name}_link_5"/>
    </joint>

    <link name="${name}_link_5">
      <inertial>
        <mass value="${arm_elem_link_mass}"/>
        <origin rpy="0 0 0" xyz="0 0 0.124"/>
        <cuboid_inertia_def length="0.12" width="0.06" height="0.248"
                            mass="${arm_elem_link_mass}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry name="${name}_arm_5_geom">
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_segment_last.dae"/>
        </geometry>
        <material name="White"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_segment_last_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_5">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_4_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_4_motor"/>
      <joint name="${name}_arm_4_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <joint name="${name}_arm_5_joint" type="revolute">
      <origin xyz="0 0 0.19" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-120 * M_PI / 180}" upper="${120 * M_PI / 180}"
             effort="306" velocity="${arm_velocity_scale_factor * 180 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-110 * M_PI / 180}"
                         soft_upper_limit="${110 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="10.0"/>
      <parent link="${name}_link_5"/>
      <child link="${name}_link_6"/>
    </joint>

    <link name="${name}_link_6">
      <inertial>
        <mass value="0.2"/>
        <origin rpy="0 0 0" xyz="0 0 0.0625"/>
        <cuboid_inertia_def length="0.125" width="0.125" height="0.125"
                            mass="0.2"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_wrist.dae"/>
        </geometry>
        <material name="Grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_wrist_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_link_6">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_5_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_5_motor"/>
      <joint name="${name}_arm_5_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

    <joint name="${name}_arm_6_joint" type="revolute">
      <origin xyz="0 0 0.078" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-170 * M_PI / 180}" upper="${170 * M_PI / 180}"
             effort="204" velocity="${arm_velocity_scale_factor * 180 * M_PI / 180}" />
      <safety_controller soft_lower_limit="${-160 * M_PI / 180}"
                         soft_upper_limit="${160 * M_PI / 180}"
                         k_position="30"
                         k_velocity="30"/>
      <dynamics damping="1.0"/>
      <parent link="${name}_link_6"/>
      <child link="${name}_link_7"/>
    </joint>

    <link name="${name}_link_7">
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 0"/>
        <cuboid_inertia_def length="1" width="1" height="1"
                            mass="0.2"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${right * -1/4 * M_PI}"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/arm_flanche.dae"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${right * -1/4 * M_PI}"/>
        <geometry>
          <mesh filename="package://lwr_rviz_visualization/meshes/lwr/convex/arm_flanche_convex.stl"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${name}_arm_7_link">
      <material value="kuka-lwr.material"/>
    </gazebo>

    <transmission name="${name}_arm_6_trans" type="SimpleTransmission">
      <actuator name="${name}_arm_6_motor"/>
      <joint name="${name}_arm_6_joint"/>
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>


