<?xml version="1.0"?>
<robot name="kimp">

  <include filename="$(find Scene_Simulator)/defs/kimp/kuka_lwr_arm_defs.xml"/>
  <include filename="$(find Scene_Simulator)/defs/kimp/gazebo_defs.xml"/>
  <include filename="$(find Scene_Simulator)/defs/materials.xml"/>

  <link name="world"/>

 <joint name="arm_world_joint" type="fixed">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 3.14159265359"/>
    <parent link="world"/>
    <child link="arm_world_link"/>
  </joint> 

  <link name="arm_world_link">
    <inertial>
      <mass value="0.01"/>
      <com xyz="0 0 0"/>
      <inertia  ixx="0.01" ixy="0.00"  ixz="0.00"
                iyy="0.01" iyz="0.00"
                izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.0075" rpy="0 0 0"/>
      <geometry>
        <box size="0.275 0.275 0.015"/>
      </geometry>
      <material name="Grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.0075" rpy="0 0 0"/>
      <geometry>
        <box size="0.275 0.275 0.015"/>
      </geometry>
    </collision>
  </link> 

  <joint name="ground_world_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="arm_world_link"/>
    <child link="ground_link"/>
  </joint> 

<!-- The table x size is 0.05 bigger than in reality to cope with calibration errors -->
 <link name="ground_link">
    <visual>
      <origin xyz="0.2725 0 -0.36" rpy="0 0 0"/>
      <geometry>
        <box size="0.85 1.6 0.72"/>
      </geometry>
      <material name="Brown"/>
    </visual>

    <collision>
      <origin xyz="0.2725 0 -0.36" rpy="0 0 0"/>
      <geometry>
        <box size="0.85 1.6 0.72"/>
      </geometry>
    </collision>
  </link>
  
  <!-- Kuka arm -->
  <kuka_lwr_arm parent="arm_world" name="kimp_right" right="1">
    <origin xyz="0 0 0.015" rpy="0 0 0"/>
  </kuka_lwr_arm>

   <!-- Cut background -->
   <link name="wall1"> 
        <visual>
            <geometry>
                <box size="3 4 2" />
            </geometry>
        <material name="Orange"/>
        </visual>>
        <collision>
            <geometry>
                <box size="3 4 2" />
            </geometry>
        </collision>>
    </link>

    <joint name="wall1_joint" type="fixed" >
        <origin xyz="2.5 0 0" rpy="0 0 0"/>
        <parent link="arm_world_link"/>
        <child link="wall1"/>
    </joint> 

   <link name="wall2"> 
        <visual>
            <geometry>
                <box size="3 4 2" />
            </geometry>
        <material name="Orange"/>
        </visual>>
        <collision>
            <geometry>
                <box size="3 4 2" />
            </geometry>
        </collision>>
    </link>

    <joint name="wall2_joint" type="fixed" >
        <origin xyz="1.5 -2.3 0" rpy="0 0 1.5708"/>
        <parent link="arm_world_link"/>
        <child link="wall2"/>
    </joint> 

  <!-- END Cut background -->
  
</robot>
